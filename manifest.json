{
    "name": "Whatsapp Content Block",
    "version": "1.0",
    "description": "Allow you block some content or people in whatsapp web.",
    "manifest_version": 2,
    "permissions": [
        "https://web.whatsapp.com/",
        "declarativeContent"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.whatsapp.com/"
            ],
            "css": [
                "css/main.css"
            ],
            "js": [
                "js/menu.js",
                "js/main.js"
            ]
        }
    ],
    "icons": {
        "16": "assets/icons/icon16.png",
        "48": "assets/icons/icon48.png",
        "128": "assets/icons/icon128.png"
    },
    "browser_action": {
        "default_icon": "assets/icons/icon16.png"
    },
    "background": {
        "scripts": ["js/menu.js"],
        "persistent": false
      }
}